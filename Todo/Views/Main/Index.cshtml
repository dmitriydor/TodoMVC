@model  IEnumerable<TodoItem>
<div>
    <div class="text-center slider">
        <span><a></a>Friday<a></a></span>
    </div>
    @foreach(var todo in Model)
    {
    <div class="card my-3">
        <div class="card-header d-flex justify-content-between">
            <h4>@todo.Name</h4>
            @if (todo.Priority == 3)
            {
                <div class="btn btn-danger" style="width:15%;">Heidght</div>
            }
            @if (todo.Priority == 2)
            {
                <div class="btn btn-warning" style="width:15%;">Medium</div>
            }
            @if (todo.Priority == 1)
            {
                <div class="btn btn-success" style="width:15%;">Low</div>
            }
        </div>
        <div class="card-body">
            <p class="card-text">@todo.Description</p>
            <a asp-controller="TodoItem" asp-action="Edit" class="btn btn-primary">Edit</a>
        </div>
    </div>
    }
    <a class="nav-link mx-5" asp-controller="TodoItem" asp-action="AddTodoItem">
        <div class="text-center add-todo">+ Add To Do</div>
    </a>
</div>